<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   width="1200" height="764" backgroundColor="#FFFFFF"
					   preloaderChromeColor="#FFFFF"
					   title="AirMusic">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	
	<fx:Script>
		<![CDATA[
			import mx.events.FlexNativeWindowBoundsEvent;
			import mx.events.MenuEvent;
			protected function Play_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
			protected function Stop_clickHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
			protected function myMenuBar_changeHandler(event:MenuEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Placer ici les éléments non visuels (services et objets de valeur, par exemple). -->
	</fx:Declarations>
	<s:VGroup x="12" y="4" width="1179" height="747" verticalAlign="top">
		<s:HGroup id="MenuGroup" width="1171" height="28">
			<mx:MenuBar id="myMenuBar" labelField="@label">
				<fx:XMLList>
					<menuitem label="Fichier">
						<menuitem label="Ajouter un dossier" type="button"/>
						<menuitem label="Ouvrir un fichier"/>
						<menuitem label = "Creer une playlist"/>
						<menuitem label ="Importer une playlist"/>
					</menuitem>
				</fx:XMLList>
			</mx:MenuBar>
		</s:HGroup>
		<s:HGroup width="1170" height="568">
			<s:VGroup width="333" height="578">
				<mx:Accordion width="328" height="264">
					<s:NavigatorContent width="100%" height="100%" label="Playlist1">
					</s:NavigatorContent>
					<s:NavigatorContent width="100%" height="100%" label="playlist2">
					</s:NavigatorContent>
					<s:NavigatorContent width="100%" height="100%" label="playlist3">
					</s:NavigatorContent>
				</mx:Accordion>
				<s:SWFLoader id="Econest_Image" width="327" height="240"/>
				<s:Label id="Name" fontFamily="Times New Roman" fontSize="22" text="Name"/>
				<s:Label id="ArtisteDisplay" text="Artiste"/>
				<s:Label id="AlbumInfo" text="Album"/>
			</s:VGroup>
			<s:Scroller width="833" height="561">
				<s:VGroup id="ScrollerMusic" width="100%" height="100%">
					<s:List id="ListMusic" width="817" height="563"></s:List>
				</s:VGroup>
			</s:Scroller>
		</s:HGroup>
		<s:VGroup width="1174" height="142">
			<s:VGroup id="ListeLecture" width="1175" height="70" verticalAlign="top">
				<s:SWFLoader width="56" height="48"/>
				<s:HScrollBar width="1174"/>
			</s:VGroup>
			<s:HGroup id="PlayElement" width="1174" height="63" verticalAlign="middle">
				<s:Button id="Rewind" y="20" height="33" label="Rewind"/>
				<s:Button id="Play" y="20" height="33" label="Play" click="Play_clickHandler(event)"/>
				<s:Button id="Stop" y="21" height="33" label="Stop" click="Stop_clickHandler(event)"/>
				<s:Button id="forwind" y="19" height="33" label="Forwind"/>
				<s:Image id="SpeekerImage"/>
				<s:HSlider id="SpeekerLevel" width="115"/>
				<mx:ProgressBar y="26" width="541" height="12" label=" "/>
				<s:ToggleButton id="ShuffleButton" width="59" label="Shuffle"/>
				<s:ToggleButton id="RepeatButton" width="76" label="Repeat"/>
			</s:HGroup>
		</s:VGroup>
	</s:VGroup>
</s:WindowedApplication>
